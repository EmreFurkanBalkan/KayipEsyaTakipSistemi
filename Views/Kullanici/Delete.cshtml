@model LostAndFoundApp.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<!-- Page Header -->
<div class="mb-8">
    <div class="flex items-center space-x-4">
        <a asp-action="Index" class="text-gray-500 hover:text-gray-700 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Kullanıcı Sil</h1>
            <p class="mt-2 text-sm text-gray-600">Bu işlem geri alınamaz. Lütfen dikkatli olun.</p>
        </div>
    </div>
</div>

<!-- Warning Alert -->
<div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Dikkat! Bu işlem geri alınamaz</h3>
            <div class="mt-2 text-sm text-red-700">
                <p>Bu kullanıcıyı silmek üzeresiniz. Bu işlem kalıcıdır ve geri alınamaz.</p>
            </div>
        </div>
    </div>
</div>

<!-- User Details Card -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-6">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-red-500 to-pink-600 px-6 py-8">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="h-20 w-20 rounded-full bg-white bg-opacity-20 flex items-center justify-center">
                    <span class="text-3xl font-bold text-white">@Model.AdSoyad.Substring(0, 1).ToUpper()</span>
                </div>
            </div>
            <div class="ml-6">
                <h2 class="text-2xl font-bold text-white">@Model.AdSoyad</h2>
                <div class="mt-2">
                    @if (Model.Rol == "Admin")
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
                            </svg>
                            Admin
                        </span>
                    }
                    else if (Model.Rol == "Moderator")
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9.243 3.03a1 1 0 01.727 1.213L9.53 6h2.94l.56-2.243a1 1 0 111.94.486L14.53 6H17a1 1 0 110 2h-2.97l-1 4H15a1 1 0 110 2h-2.47l-.56 2.242a1 1 0 11-1.94-.485L10.47 14H7.53l-.56 2.242a1 1 0 11-1.94-.485L5.47 14H3a1 1 0 110-2h2.97l1-4H5a1 1 0 110-2h2.47l.56-2.243a1 1 0 011.213-.727zM9.03 8l-1 4h2.94l1-4H9.03z" clip-rule="evenodd"></path>
                            </svg>
                            Moderatör
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Details Section -->
    <div class="px-6 py-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Silinecek Kullanıcı Bilgileri</h3>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
                <dt class="text-sm font-medium text-gray-500">Kullanıcı ID</dt>
                <dd class="mt-1 text-sm text-gray-900 font-mono bg-gray-50 px-2 py-1 rounded">#@Model.Id</dd>
            </div>
            
            <div>
                <dt class="text-sm font-medium text-gray-500">Ad Soyad</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.AdSoyad</dd>
            </div>
            
            <div>
                <dt class="text-sm font-medium text-gray-500">Rol</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    @if (Model.Rol == "Admin")
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
                            </svg>
                            Admin
                        </span>
                    }
                    else if (Model.Rol == "Moderator")
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9.243 3.03a1 1 0 01.727 1.213L9.53 6h2.94l.56-2.243a1 1 0 111.94.486L14.53 6H17a1 1 0 110 2h-2.97l-1 4H15a1 1 0 110 2h-2.47l-.56 2.242a1 1 0 11-1.94-.485L10.47 14H7.53l-.56 2.242a1 1 0 11-1.94-.485L5.47 14H3a1 1 0 110-2h2.97l1-4H5a1 1 0 110-2h2.47l.56-2.243a1 1 0 011.213-.727zM9.03 8l-1 4h2.94l1-4H9.03z" clip-rule="evenodd"></path>
                            </svg>
                            Moderatör
                        </span>
                    }

                </dd>
            </div>
        </dl>
    </div>
</div>

<!-- Confirmation Form -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <form asp-action="Delete" class="space-y-6">
        <input asp-for="Id" type="hidden" />
        
        <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Kullanıcıyı silmek istediğinizden emin misiniz?</h3>
            <p class="mt-2 text-sm text-gray-500">
                Bu işlem <strong>@Model.AdSoyad</strong> kullanıcısını kalıcı olarak silecektir.
            </p>
        </div>
        
        <!-- Actions -->
        <div class="flex items-center justify-center space-x-4 pt-6">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn-secondary-modern">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                Detayları Görüntüle
            </a>
            <a asp-action="Index" class="btn-secondary-modern" style="border-radius: 25px;">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                İptal
            </a>

            <button type="submit" class="btn-danger-modern">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1-1H8a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Evet, Kullanıcıyı Sil
            </button>
        </div>
    </form>
</div>

<!-- Additional Warning -->
<div class="mt-6 bg-orange-50 border border-orange-200 rounded-lg p-4">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-orange-800">Silme İşlemi Hakkında</h3>
            <div class="mt-2 text-sm text-orange-700">
                <ul class="list-disc list-inside space-y-1">
                    <li>Bu kullanıcının tüm verileri kalıcı olarak silinecektir</li>
                    <li>Bu işlem geri alınamaz</li>
                    <li>Kullanıcının eklediği kayıp eşya kayıtları etkilenebilir</li>
                    <li>Silme işleminden önce verileri yedeklemeyi düşünün</li>
                </ul>
            </div>
        </div>
    </div>
</div>