@model LostAndFoundApp.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<!-- Page Header -->
<div class="mb-8">
    <div class="flex items-center space-x-4">
        <a asp-action="Index" class="text-gray-500 hover:text-gray-700 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Kullanıcı Detayları</h1>
            <p class="mt-2 text-sm text-gray-600">@Model.AdSoyad kullanıcısının detay bilgileri</p>
        </div>
    </div>
</div>

<!-- User Details Card -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-6 py-8">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="h-20 w-20 rounded-full bg-white bg-opacity-20 flex items-center justify-center">
                    <span class="text-3xl font-bold text-white">@Model.AdSoyad.Substring(0, 1).ToUpper()</span>
                </div>
            </div>
            <div class="ml-6">
                <h2 class="text-2xl font-bold text-white">@Model.AdSoyad</h2>
                <div class="mt-2">
                    @if (Model.Rol == "Admin")
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
                            </svg>
                            Admin
                        </span>
                    }
                    else if (Model.Rol == "Moderator")
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9.243 3.03a1 1 0 01.727 1.213L9.53 6h2.94l.56-2.243a1 1 0 111.94.486L14.53 6H17a1 1 0 110 2h-2.97l-1 4H15a1 1 0 110 2h-2.47l-.56 2.242a1 1 0 11-1.94-.485L10.47 14H7.53l-.56 2.242a1 1 0 11-1.94-.485L5.47 14H3a1 1 0 110-2h2.97l1-4H5a1 1 0 110-2h2.47l.56-2.243a1 1 0 011.213-.727zM9.03 8l-1 4h2.94l1-4H9.03z" clip-rule="evenodd"></path>
                            </svg>
                            Moderatör
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Details Section -->
    <div class="px-6 py-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
                <dt class="text-sm font-medium text-gray-500">Kullanıcı ID</dt>
                <dd class="mt-1 text-sm text-gray-900 font-mono bg-gray-50 px-2 py-1 rounded">#@Model.Id</dd>
            </div>
            
            <div>
                <dt class="text-sm font-medium text-gray-500">Ad Soyad</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.AdSoyad</dd>
            </div>
            
            <div>
                <dt class="text-sm font-medium text-gray-500">Rol</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    @if (Model.Rol == "Admin")
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
                            </svg>
                            Admin
                        </span>
                    }
                    else if (Model.Rol == "Moderator")
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9.243 3.03a1 1 0 01.727 1.213L9.53 6h2.94l.56-2.243a1 1 0 111.94.486L14.53 6H17a1 1 0 110 2h-2.97l-1 4H15a1 1 0 110 2h-2.47l-.56 2.242a1 1 0 11-1.94-.485L10.47 14H7.53l-.56 2.242a1 1 0 11-1.94-.485L5.47 14H3a1 1 0 110-2h2.97l1-4H5a1 1 0 110-2h2.47l.56-2.243a1 1 0 011.213-.727zM9.03 8l-1 4h2.94l1-4H9.03z" clip-rule="evenodd"></path>
                            </svg>
                            Moderatör
                        </span>
                    }
                </dd>
            </div>
            
            <div>
                <dt class="text-sm font-medium text-gray-500">Şifre Durumu</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                        </svg>
                        Şifrelenmiş
                    </span>
                </dd>
            </div>
        </dl>
    </div>
    
    <!-- Actions Section -->
    <div class="bg-gray-50 px-6 py-4">
        <div class="flex items-center justify-between">
            <div class="text-sm text-gray-500">
                Kullanıcı bilgilerini görüntülüyorsunuz
            </div>
            <div class="flex space-x-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary-modern">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Düzenle
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-danger-modern">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1-1H8a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Sil
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Role Permissions Info -->
<div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Rol Yetkileri</h3>
            <div class="mt-2 text-sm text-blue-700">
                @if (Model.Rol == "Admin")
                {
                    <ul class="list-disc list-inside space-y-1">
                        <li>Tüm sistem ayarlarına erişim</li>
                        <li>Kullanıcı yönetimi</li>
                        <li>Kayıp eşya yönetimi</li>
                        <li>Sistem raporları</li>
                    </ul>
                }
                else if (Model.Rol == "Moderator")
                {
                    <ul class="list-disc list-inside space-y-1">
                        <li>Kayıp eşya yönetimi</li>
                        <li>Kullanıcı içeriklerini moderasyon</li>
                        <li>Raporları görüntüleme</li>
                    </ul>
                }
                else
                {
                    <ul class="list-disc list-inside space-y-1">
                        <li>Kayıp eşya ekleme</li>
                        <li>Kendi kayıtlarını düzenleme</li>
                        <li>Arama ve filtreleme</li>
                    </ul>
                }
            </div>
        </div>
    </div>
</div>