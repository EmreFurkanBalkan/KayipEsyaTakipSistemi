@model LostAndFoundApp.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<!-- Page Header -->
<div class="mb-8">
    <div class="flex items-center space-x-4">
        <a asp-action="Index" class="text-gray-500 hover:text-gray-700 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Kullanıcı Düzenle</h1>
            <p class="mt-2 text-sm text-gray-600">@Model.AdSoyad kullanıcısının bilgilerini düzenleyin</p>
        </div>
    </div>
</div>

<!-- Form Section -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <form asp-action="Edit" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
        
        <!-- Hidden ID Field -->
        <input asp-for="Id" type="hidden" />
        
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <!-- Ad Soyad -->
            <div class="sm:col-span-2">
                <label asp-for="AdSoyad" class="block text-sm font-medium text-gray-700 mb-2">Ad Soyad</label>
                <input asp-for="AdSoyad" class="form-input-modern" placeholder="Kullanıcının ad ve soyadını girin" />
                <span asp-validation-for="AdSoyad" class="text-red-600 text-sm"></span>
            </div>
            
            <!-- Şifre -->
            <div>
                <label asp-for="Sifre" class="block text-sm font-medium text-gray-700 mb-2">Şifre</label>
                <input asp-for="Sifre" type="password" class="form-input-modern" placeholder="Yeni şifre (boş bırakılırsa değişmez)" />
                <span asp-validation-for="Sifre" class="text-red-600 text-sm"></span>
                <p class="mt-1 text-sm text-gray-500">Şifreyi değiştirmek istemiyorsanız bu alanı boş bırakın</p>
            </div>
            
            <!-- Rol -->
            <div>
                <label asp-for="Rol" class="block text-sm font-medium text-gray-700 mb-2">Rol</label>
                <select asp-for="Rol" class="form-input-modern">
                    <option value="">Rol seçin</option>
                    <option value="Admin">Admin</option>
                    <option value="Moderator">Moderatör</option>
                </select>
                <span asp-validation-for="Rol" class="text-red-600 text-sm"></span>
            </div>
        </div>
        
        <!-- Current User Info -->
        <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Mevcut Bilgiler</h3>
            <dl class="grid grid-cols-1 gap-x-4 gap-y-2 sm:grid-cols-3">
                <div>
                    <dt class="text-xs font-medium text-gray-500">ID</dt>
                    <dd class="text-sm text-gray-900 font-mono">#@Model.Id</dd>
                </div>
                <div>
                    <dt class="text-xs font-medium text-gray-500">Mevcut Ad Soyad</dt>
                    <dd class="text-sm text-gray-900">@Model.AdSoyad</dd>
                </div>
                <div>
                    <dt class="text-xs font-medium text-gray-500">Mevcut Rol</dt>
                    <dd class="text-sm text-gray-900">
                        @if (Model.Rol == "Admin")
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                                Admin
                            </span>
                        }
                        else if (Model.Rol == "Moderator")
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                                Moderatör
                            </span>
                        }
                    </dd>
                </div>
            </dl>
        </div>
        
        <!-- Form Actions -->
        <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn-secondary-modern">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                Detayları Görüntüle
            </a>
            <a asp-action="Index" class="btn-secondary-modern">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                İptal
            </a>
            <button type="submit" class="btn-primary-modern">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Değişiklikleri Kaydet
            </button>
        </div>
    </form>
</div>

<!-- Warning Section -->
<div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Önemli Uyarılar</h3>
            <div class="mt-2 text-sm text-yellow-700">
                <ul class="list-disc list-inside space-y-1">
                    <li>Rol değişiklikleri kullanıcının sistem erişim yetkilerini etkileyecektir</li>
                    <li>Şifre alanını boş bırakırsanız mevcut şifre korunacaktır</li>
                    <li>Admin rolü verirken dikkatli olun - tam sistem erişimi sağlar</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}