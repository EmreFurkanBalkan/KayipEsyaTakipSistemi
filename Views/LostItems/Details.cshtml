@model LostItem

@{
    ViewData["Title"] = "Kayıp Eşya Detayları";
}

<!-- Page Header -->
<div class="page-header bg-gradient-to-r from-blue-600 to-blue-800 text-white py-8 mb-8">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold mb-2">Kayıp Eşya Detayları</h1>
                <p class="text-blue-100">@Model.ItemName detay bilgileri</p>
            </div>
            <div class="flex items-center space-x-3">
                <button onclick="printDetails()" class="btn-success">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                    </svg>
                    Yazdır
                </button>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Düzenle
                </a>
                <a asp-action="Index" class="btn-secondary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container mx-auto px-4 py-8">
    <div class="details-content bg-white rounded-lg shadow-lg p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Sol Kolon -->
            <div class="space-y-6">
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        Eşya Bilgileri
                    </h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Eşya Adı</label>
                            <p class="text-gray-900 font-medium">@Model.ItemName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Açıklama</label>
                            <p class="text-gray-900">@Model.Description</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Durum</label>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                                @(Model.Status == LostItemStatus.TeslimEdildi ? "bg-green-100 text-green-800" : 
                                  "bg-red-100 text-red-800")">
                                @Model.Status.ToString()
                            </span>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Bulan Kişi
                    </h3>
                    <p class="text-gray-900 font-medium">@Model.FoundBy</p>
                </div>
            </div>

            <!-- Sağ Kolon -->
            <div class="space-y-6">
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 6v6m-4-6h8m-8 0V9a2 2 0 012-2h4a2 2 0 012 2v2"></path>
                        </svg>
                        Tarih Bilgisi
                    </h3>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Bulunma Tarihi</label>
                        <p class="text-gray-900 font-medium">@Model.FoundDate.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                </div>

                @if (Model.LineCode != null)
                {
                    <div class="bg-gray-50 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                            </svg>
                            Hat Bilgisi
                        </h3>
                        <div class="space-y-2">
                            <div>
                                <label class="block text-sm font-medium text-gray-600">Hat Kodu</label>
                                <p class="text-gray-900 font-medium">@Model.LineCode.Line</p>
                            </div>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Location))
                {
                    <div class="bg-gray-50 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            Konum Bilgisi
                        </h3>
                        <div class="space-y-2">
                            <div>
                                <label class="block text-sm font-medium text-gray-600">Araç Kapı Numarası</label>
                                <p class="text-gray-900 font-medium">@Model.Location</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
function printDetails() {
    window.print();
}
</script>

