@model LostAndFoundApp.Models.User

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold text-gray-900">Kullanıcı Detayları</h1>
        <p class="mt-2 text-gray-600">Kullanıcı bilgilerini görüntüleyin</p>
    </div>
</div>

<!-- Main Content -->
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            
            <!-- Kullanıcı Bilgileri -->
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center mb-6">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Kullanıcı Bilgileri
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <dt class="text-sm font-medium text-gray-500">ID</dt>
                        <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.Id)</dd>
                    </div>
                    
                    <div class="space-y-2">
                        <dt class="text-sm font-medium text-gray-500">Kullanıcı Adı</dt>
                        <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.UserName)</dd>
                    </div>
                </div>
            </div>

            <!-- Güvenlik Bilgileri -->
            <div class="bg-gradient-to-r from-yellow-50 to-orange-50 p-6">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center mb-4">
                    <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    Güvenlik Bilgileri
                </h3>
                
                <div class="bg-yellow-100 border-l-4 border-yellow-500 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">
                                Şifre bilgileri güvenlik nedeniyle görüntülenmez. Şifre değişikliği için düzenleme sayfasını kullanın.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-primary flex-1 sm:flex-none">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Düzenle
            </a>
            <a asp-action="Index" class="btn-secondary flex-1 sm:flex-none text-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Geri Dön
            </a>
        </div>
    </div>
</div>