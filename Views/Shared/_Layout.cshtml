<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IETT Kayıp Eşya Sistemi</title>
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'iett-blue': '#0f172a',
                        'iett-blue-light': '#1e293b',
                        'iett-gray': '#64748b',
                    },
                    fontFamily: {
                        'sans': ['Inter', 'system-ui', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-slate-50 text-slate-900 font-sans">

    <!-- Navigation -->
    <nav class="bg-iett-blue shadow-lg sticky top-0 z-50">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <div class="flex items-center h-full">
                <!-- Logo Section with Red Background - Full Height -->
                <a class="flex items-center justify-center px-4 bg-red-600 h-full" 
                   asp-controller="Home" asp-action="Index">
                    <!-- İETT Logo -->
                    <img src="~/images/iett1.png" alt="İETT Logo" class="h-10 w-auto" />
                </a>
                
                <!-- Text Section -->
                <a class="flex items-center px-4 py-2 text-white hover:text-gray-200 transition-colors" 
                   asp-controller="Home" asp-action="Index">
                    <span class="font-bold text-lg">Kayıp Eşya Sistemi</span>
                </a>
            </div>
            
            <!-- Navigation Content -->
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex-1">
                <div class="flex justify-end items-center h-16">
                
                <!-- Navigation Links -->
                <div class="hidden md:flex items-center space-x-8">
                    <a class="text-white hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors" 
                       asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    <a class="text-white hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors" 
                       asp-controller="LostItems" asp-action="Index">Kayıp Eşyalar</a>
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <a class="text-white hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors" 
                           asp-controller="Users" asp-action="Index">Kullanıcılar</a>
                    }
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <a class="text-white hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors" 
                           asp-controller="LineCodes" asp-action="Index">Hatlar</a>
                    }
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <a class="text-white hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors" 
                           asp-controller="Logs" asp-action="Index">Sistem Logları</a>
                    }
                    
                    @if (Context.Session.GetString("UserName") != null)
                    {
                        <!-- User Dropdown -->
                        <div class="relative ml-8 pl-8 border-l border-white/30">
                            <button onclick="toggleUserDropdown()" class="flex items-center space-x-2 text-white hover:text-gray-200 focus:outline-none focus:text-gray-200 transition-colors">
                                <div class="text-sm">
                                    <span class="font-medium">@Context.Session.GetString("UserName")</span>
                                    @if (Context.Session.GetString("UserRole") != null)
                                    {
                                        <span class="text-gray-300 block">@Context.Session.GetString("UserRole")</span>
                                    }
                                </div>
                                <svg class="w-4 h-4 transition-transform duration-200" id="dropdown-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            
                            <!-- Dropdown Menu -->
                            <div id="user-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50">
                                <div class="px-4 py-2 text-sm text-gray-700 border-b">
                                    <div class="font-medium">@Context.Session.GetString("UserName")</div>
                                    @if (Context.Session.GetString("UserRole") != null)
                                    {
                                        <div class="text-gray-500">@Context.Session.GetString("UserRole")</div>
                                    }
                                </div>
                                <div class="border-t border-gray-100"></div>
                                <a class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors" 
                                   asp-controller="Account" asp-action="Logout">
                                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                    </svg>
                                    Çıkış Yap
                                </a>
                            </div>
                        </div>
                    }
                    </div>
                    
                    <!-- Mobile menu button -->
                    <div class="md:hidden">
                        <button type="button" class="text-white hover:text-gray-200 focus:outline-none focus:text-gray-200" 
                                onclick="toggleMobileMenu()">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
            
            <!-- Mobile menu -->
            <div id="mobile-menu" class="hidden md:hidden pb-4">
                <a class="block text-white hover:text-gray-200 px-3 py-2 text-sm font-medium" 
                   asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                <a class="block text-white hover:text-gray-200 px-3 py-2 text-sm font-medium" 
                   asp-controller="LostItems" asp-action="Index">Kayıp Eşyalar</a>
                @if (Context.Session.GetString("UserRole") == "Admin")
                {
                    <a class="block text-white hover:text-gray-200 px-3 py-2 text-sm font-medium" 
                       asp-controller="Users" asp-action="Index">Kullanıcılar</a>
                }
                <a class="block text-white hover:text-gray-200 px-3 py-2 text-sm font-medium" 
                   asp-controller="LineCodes" asp-action="Index">Hatlar</a>
                
                @if (Context.Session.GetString("UserName") != null)
                {
                    <div class="border-t border-white/30 mt-4 pt-4">
                        <div class="text-white px-3 py-2 text-sm">
                            <span class="font-medium">@Context.Session.GetString("UserName")</span>
                            @if (Context.Session.GetString("UserRole") != null)
                            {
                                <span class="text-gray-300">(@Context.Session.GetString("UserRole"))</span>
                            }
                        </div>
                        <div class="px-3 space-y-1">
                            <a class="block bg-red-600 hover:bg-red-700 text-white px-3 py-2 text-sm font-medium rounded-md mt-2" 
                               asp-controller="Account" asp-action="Logout">
                                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                                Çıkış Yap
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    @await RenderSectionAsync("Hero", required: false)

    <!-- Main Content -->
    <main class="min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-sm text-gray-600 mb-4 md:mb-0">
                    &copy; 2025 IETT Kayıp Eşya Sistemi. Tüm hakları saklıdır.
                </div>
                <div class="flex space-x-6">
                    <a class="text-sm text-gray-600 hover:text-gray-900 transition-colors" 
                       asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
        
        function toggleUserDropdown() {
            const dropdown = document.getElementById('user-dropdown');
            const arrow = document.getElementById('dropdown-arrow');
            
            dropdown.classList.toggle('hidden');
            arrow.classList.toggle('rotate-180');
        }
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('user-dropdown');
            const button = event.target.closest('button[onclick="toggleUserDropdown()"]');
            
            if (!button && dropdown && !dropdown.contains(event.target)) {
                dropdown.classList.add('hidden');
                document.getElementById('dropdown-arrow').classList.remove('rotate-180');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
