@model IEnumerable<LostAndFoundApp.Models.Logs>

@{
    ViewData["Title"] = "Sistem Logları";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <svg class="w-8 h-8 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <h1 class="text-3xl font-bold text-gray-900">Sistem Logları</h1>
                </div>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <div class="flex flex-wrap gap-4">
                <a href="@Url.Action("Index")" class="@(string.IsNullOrEmpty(ViewBag.LogType) ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300") px-4 py-2 rounded-lg transition-colors">
                    Tümü
                </a>
                <a href="@Url.Action("Index", new { logType = "CREATE" })" class="@(ViewBag.LogType == "CREATE" ? "bg-green-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300") px-4 py-2 rounded-lg transition-colors">
                    Oluşturma
                </a>
                <a href="@Url.Action("Index", new { logType = "UPDATE" })" class="@(ViewBag.LogType == "UPDATE" ? "bg-yellow-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300") px-4 py-2 rounded-lg transition-colors">
                    Güncelleme
                </a>
                <a href="@Url.Action("Index", new { logType = "DELETE" })" class="@(ViewBag.LogType == "DELETE" ? "bg-red-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300") px-4 py-2 rounded-lg transition-colors">
                    Silme
                </a>
                <a href="@Url.Action("Index", new { logType = "Login" })" class="@(ViewBag.LogType == "Login" || ViewBag.LogType == "LOGIN" ? "bg-green-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300") px-4 py-2 rounded-lg transition-colors">
                    Giriş
                </a>
                <a href="@Url.Action("Index", new { logType = "Logout" })" class="@(ViewBag.LogType == "Logout" ? "bg-orange-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300") px-4 py-2 rounded-lg transition-colors">
                    Çıkış
                </a>
            </div>
        </div>

        <!-- Logs Table -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tarih</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tip</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kullanıcı</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlem</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (Model.Any())
                        {
                            @foreach (var log in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @log.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (log.LogType == "CREATE")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
                                                </svg>
                                                Oluşturma
                                            </span>
                                        }
                                        else if (log.LogType == "UPDATE")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                                </svg>
                                                Güncelleme
                                            </span>
                                        }
                                        else if (log.LogType == "DELETE")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 012 0v4a1 1 0 11-2 0V7zM12 7a1 1 0 012 0v4a1 1 0 11-2 0V7z" clip-rule="evenodd"></path>
                                                </svg>
                                                Silme
                                            </span>
                                        }
                                        else if (log.LogType == "Login" || log.LogType == "LOGIN")
                        {
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                Giriş
                            </span>
                        }
                                        else if (log.LogType == "Logout")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M17 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zM3.293 6.293a1 1 0 011.414 0L7 8.586V11a1 1 0 102 0V8.586l2.293-2.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                                </svg>
                                                Çıkış
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                @log.LogType
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        @log.Executor
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-900">
                                        @log.LogContent
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="px-6 py-12 text-center text-gray-500">
                                    <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <p class="text-lg font-medium">Henüz log kaydı bulunmuyor</p>
                                    <p class="text-sm">Sistem kullanıldıkça loglar burada görünecektir.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>