@model Location

@{
    ViewData["Title"] = "Lokasyon Detayları";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold text-gray-900">Lokasyon Detayları</h1>
        <p class="mt-2 text-gray-600">Lokasyon bilgilerini görüntüleyin</p>
    </div>
</div>

<!-- Main Content -->
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <div class="form-card">
            <!-- Location Information -->
            <div class="mb-8">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900">Lokasyon Bilgileri</h2>
                        <p class="text-gray-600">Lokasyon detay bilgileri</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="detail-item">
                        <label class="detail-label">Hat Kodu</label>
                        <div class="detail-value">@Model.LineCode?.Line</div>
                    </div>

                    <div class="detail-item">
                        <label class="detail-label">Kayıp Eşya</label>
                        <div class="detail-value">@Model.LostItem?.ItemName</div>
                    </div>

                    <div class="detail-item">
                        <label class="detail-label">Kapı Numarası</label>
                        <div class="detail-value">@Model.KapiID</div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-primary flex-1 sm:flex-none text-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Düzenle
                </a>
                <a asp-action="Index" class="btn-secondary flex-1 sm:flex-none text-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>
